#------------------------------------------------------------------------------
# Convert trackr.bin file into trackr.hex file
#------------------------------------------------------------------------------

NAME      = trackr
BIN_NAME  = ./$(NAME).bin
HEX_NAME  = ./$(NAME).hex
OFFSET    = 0x16000

OBJCOPY  := arm-none-eabi-objcopy

#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
all: $(HEX_NAME)

$(HEX_NAME):
	$(OBJCOPY) --change-addresses $(OFFSET) -Ibinary -Oihex $(BIN_NAME) $(HEX_NAME)

#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
clean:
	$(RM) ./*.hex
